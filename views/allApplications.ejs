<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<h1 class="text-center bg-warning py-2">Applicant Data</h1>

<div class="container mt-4">
  <div class="text-end mb-3">
    <a href="/apply" class="btn btn-primary">Apply for Job</a>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Profile Applied</th>
        <th>Reasume</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% data.map((val, index) => { %>
        <tr>
          <td><%= val.full_name   %></td>
          <td><%= val.email  %></td>
          <td><%= val.phone   %></td>
          <td><%= val.position_applied  %></td>
          <td><%= val.resume %></td>
          <td>
                <a href="/uploads/<%= val.resume %>" target="_blank" class="btn btn-sm btn-info">View Resume</a>
            <a href="/allApplications/edit/<%= val.id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/allApplications/delete/<%= val.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete this student?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
